  "typography": {
    "fonts": {
      "heading": "Libre Baskerville, serif",
      "body": "Inter, sans-serif",
      "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace",
      "googleFontsEmbed": "<link href='https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Inter:wght@400;500;600&display=swap' rel='stylesheet'>"
    },
    "sizes": {
      "heroTitle": { "desktop": "4rem", "mobile": "2.5rem", "weight": 700, "lineHeight": 1.1 },
      "sectionTitle": { "desktop": "2.5rem", "mobile": "1.875rem", "weight": 700, "lineHeight": 1.2 },
      "cardTitle": { "desktop": "1.25rem", "mobile": "1.125rem", "weight": 600 },
      "body": { "size": "1.125rem", "weight": 400, "lineHeight": 1.6 },
      "small": { "size": "0.875rem", "weight": 500 }
    },
    "notes": "Use Libre Baskerville (serif) for headings - gives premium editorial feel. Use Inter for body text - clean and readable."
  },

  "spacing": {
    "sectionPadding": { "desktop": "6rem", "mobile": "4rem" },
    "containerMaxWidth": "1200px",
    "containerPadding": { "desktop": "1.5rem", "mobile": "1rem" },
    "cardPadding": "2rem",
    "gap": { "large": "3rem", "medium": "2rem", "small": "1rem" }
  },

  "borderRadius": {
    "sm": "calc(0.5rem - 4px)",
    "md": "calc(0.5rem - 2px)",
    "lg": "0.5rem",
    "xl": "calc(0.5rem + 4px)",
    "2xl": "calc(0.5rem + 8px)",
    "full": "9999px"
  },

  "shadows": {
    "2xs": "0 1px 3px 0px hsl(0 0% 0% / 0.05)",
    "xs": "0 1px 3px 0px hsl(0 0% 0% / 0.05)",
    "sm": "0 1px 3px 0px hsl(0 0% 0% / 0.10), 0 1px 2px -1px hsl(0 0% 0% / 0.10)",
    "md": "0 1px 3px 0px hsl(0 0% 0% / 0.10), 0 2px 4px -1px hsl(0 0% 0% / 0.10)",
    "lg": "0 1px 3px 0px hsl(0 0% 0% / 0.10), 0 4px 6px -1px hsl(0 0% 0% / 0.10)",
    "xl": "0 1px 3px 0px hsl(0 0% 0% / 0.10), 0 8px 10px -1px hsl(0 0% 0% / 0.10)",
    "2xl": "0 1px 3px 0px hsl(0 0% 0% / 0.25)",
    "goldGlow": "0 0 40px hsl(47.84 100% 70% / 0.3)",
    "goldGlowStrong": "0 0 60px hsl(47.84 100% 70% / 0.5)"
  },

  "components": {
    "button": {
      "primary": {
        "background": "hsl(47.84 100% 70%)",
        "color": "hsl(237.39 24.73% 18.24%)",
        "padding": "0.875rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": 600,
        "fontSize": "1rem",
        "shadow": "0 4px 14px hsl(47.84 100% 70% / 0.3)",
        "hoverBackground": "hsl(47.84 100% 65%)",
        "hoverShadow": "0 0 40px hsl(47.84 100% 70% / 0.3)",
        "transition": "all 0.3s ease"
      },
      "secondary": {
        "background": "transparent",
        "color": "hsl(221.54 35.14% 92.75%)",
        "border": "2px solid hsl(236.47 15.89% 20.98%)",
        "padding": "0.875rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": 600,
        "hoverBackground": "hsl(236.67 23.68% 14.9%)"
      }
    },
    "card": {
      "background": "hsl(237.39 24.73% 18.24%)",
      "borderRadius": "calc(0.5rem + 4px)",
      "padding": "2rem",
      "border": "1px solid hsl(236.47 15.89% 20.98%)",
      "hoverTransform": "translateY(-4px)",
      "transition": "all 0.3s ease"
    },
    "badge": {
      "background": "hsl(47.84 100% 70% / 0.2)",
      "color": "hsl(47.84 100% 70%)",
      "padding": "0.25rem 0.75rem",
      "borderRadius": "9999px",
      "fontSize": "0.75rem",
      "fontWeight": 600,
      "textTransform": "uppercase",
      "letterSpacing": "0.05em"
    },
    "input": {
      "background": "hsl(237.39 24.73% 18.24%)",
      "border": "1px solid hsl(236.47 15.89% 20.98%)",
      "borderRadius": "0.5rem",
      "padding": "0.875rem 1rem",
      "fontSize": "1rem",
      "focusBorder": "hsl(47.84 100% 70%)",
      "focusShadow": "0 0 0 3px hsl(47.84 100% 70% / 0.15)"
    },
    "nav": {
      "height": "80px",
      "background": "hsl(230 20% 11.76% / 0.95)",
      "backdropBlur": "10px",
      "borderBottom": "1px solid hsl(236.47 15.89% 20.98%)"
    }
  },

