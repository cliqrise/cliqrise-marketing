  "animations": {
    "note": "Keep animations elegant and subtle. Gold glows should pulse gently.",
    "recommended": [
      "Fade in on scroll for sections (0.6s ease)",
      "Subtle hover lift on cards (translateY -4px)",
      "Gold button glow pulse on hover",
      "Smooth color transitions (0.3s ease)"
    ],
    "avoid": [
      "Bouncing animations",
      "Spinning or rotating elements",
      "Too many simultaneous animations",
      "Harsh or jarring movements"
    ],
    "goldPulse": {
      "keyframes": "0%,100%: box-shadow 20px gold/30%, 50%: box-shadow 40px gold/50%",
      "duration": "2s",
      "timing": "ease-in-out infinite"
    }
  },

